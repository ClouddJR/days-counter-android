<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <androidx.appcompat.widget.SearchView
    android:id="@+id/searchQuery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:iconifiedByDefault="false"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:queryHint="@string/internet_gallery_search_hint"/>

  <TextView
    android:id="@+id/unsplashTV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:text="Powered by Unsplash"
    android:textSize="10sp"
    app:layout_constraintEnd_toEndOf="@id/searchQuery"
    app:layout_constraintTop_toBottomOf="@id/searchQuery"/>

  <TextView
    android:id="@+id/noResultsTV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/no_results"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/imagesRV"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/unsplashTV"
    tools:listitem="@layout/single_internet_image_gallery"/>

</androidx.constraintlayout.widget.ConstraintLayout>