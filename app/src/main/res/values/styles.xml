<resources>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="themePrimary">@color/colorPrimary</item>
        <item name="themePrimaryDark">@color/colorPrimaryDark</item>
        <item name="themeAccent">@color/colorAccent</item>
    </style>

    <!--without Action bar-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="AppTheme.NoActionBar.Light">
        <item name="themeMainBackground">@color/light_background</item>
        <item name="themeCardBackground">@color/white</item>
        <item name="themePrimaryFontColor">@color/primaryText</item>
        <item name="themeSecondaryFontColor">@color/secondaryText</item>

        <item name="android:alertDialogTheme">@style/LightDialog</item>
        <item name="android:windowBackground">?themeMainBackground</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark">
        <item name="themeMainBackground">@color/dark_background</item>
        <item name="themeCardBackground">@color/dark_background_card</item>
        <item name="themePrimaryFontColor">@color/white</item>
        <item name="themeSecondaryFontColor">@color/white_secondary</item>

        <item name="android:alertDialogTheme">@style/DarkDialog</item>
        <item name="alertDialogTheme">@style/DarkSettingsDialog</item>
        <item name="android:windowBackground">?themeMainBackground</item>
        <item name="android:textColor">?themePrimaryFontColor</item>
        <item name="android:textColorPrimary">?themePrimaryFontColor</item>
        <item name="android:textColorSecondary">?themeSecondaryFontColor</item>
        <item name="android:textColorHint">?themeSecondaryFontColor</item>
        <item name="android:timePickerDialogTheme">@style/DarkSettingsDialog</item>
        <item name="android:datePickerDialogTheme">@style/DarkSettingsDialog</item>
        <item name="android:itemBackground">@color/dark_background</item>
    </style>


    <style name="AppTheme.NoActionBar.Light.Default">
        <item name="themePrimary">@color/colorPrimary</item>
        <item name="themePrimaryDark">@color/colorPrimaryDark</item>
        <item name="themeAccent">@color/colorAccent</item>
        <item name="themeLightAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.Light.Blue">
        <item name="themePrimary">@color/bluePrimary</item>
        <item name="themePrimaryDark">@color/bluePrimaryDark</item>
        <item name="themeAccent">@color/blueAccent</item>
        <item name="themeLightAccent">@color/blueLightAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.Light.Red">
        <item name="themePrimary">@color/redPrimary</item>
        <item name="themePrimaryDark">@color/redPrimaryDark</item>
        <item name="themeAccent">@color/redAccent</item>
        <item name="themeLightAccent">@color/redLightAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.Light.Green">
        <item name="themePrimary">@color/greenPrimary</item>
        <item name="themePrimaryDark">@color/greenPrimaryDark</item>
        <item name="themeAccent">@color/greenAccent</item>
        <item name="themeLightAccent">@color/greenLightAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark.Green">
        <item name="themePrimary">@color/darkGreenPrimary</item>
        <item name="themePrimaryDark">@color/darkGreenPrimaryDark</item>
        <item name="themeAccent">@color/darkGreenAccent</item>
        <item name="themeLightAccent">@color/darkGreenLightAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark.Purple">
        <item name="themePrimary">@color/darkPurplePrimary</item>
        <item name="themePrimaryDark">@color/darkPurplePrimaryDark</item>
        <item name="themeAccent">@color/darkPurpleAccent</item>
        <item name="themeLightAccent">@color/darkPurpleLightAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark.Blue">
        <item name="themePrimary">@color/darkBluePrimary</item>
        <item name="themePrimaryDark">@color/darkBluePrimaryDark</item>
        <item name="themeAccent">@color/darkBlueAccent</item>
        <item name="themeLightAccent">@color/darkBlueLightAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark.Red">
        <item name="themePrimary">@color/darkRedPrimary</item>
        <item name="themePrimaryDark">@color/darkRedPrimaryDark</item>
        <item name="themeAccent">@color/darkRedAccent</item>
        <item name="themeLightAccent">@color/darkRedLightAccent</item>
    </style>

    <!--with Action Bar-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">?themePrimary</item>
        <item name="colorPrimaryDark">?themePrimaryDark</item>
        <item name="colorAccent">?themeAccent</item>
    </style>

    <style name="AppTheme.Light">
        <item name="themeMainBackground">@color/light_background</item>
        <item name="themeCardBackground">@color/white</item>
        <item name="themePrimaryFontColor">@color/primaryText</item>
        <item name="themeSecondaryFontColor">@color/secondaryText</item>

        <item name="android:alertDialogTheme">@style/LightDialog</item>
        <item name="android:windowBackground">?themeMainBackground</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="themeMainBackground">@color/dark_background</item>
        <item name="themeCardBackground">@color/dark_background_card</item>
        <item name="themePrimaryFontColor">@color/white</item>
        <item name="themeSecondaryFontColor">@color/white_secondary</item>

        <item name="android:alertDialogTheme">@style/DarkDialog</item>
        <item name="alertDialogTheme">@style/DarkSettingsDialog</item>
        <item name="android:windowBackground">?themeMainBackground</item>
        <item name="android:textColor">?themePrimaryFontColor</item>
        <item name="android:textColorPrimary">?themePrimaryFontColor</item>
        <item name="android:textColorSecondary">?themeSecondaryFontColor</item>
        <item name="android:textColorHint">?themeSecondaryFontColor</item>
        <item name="android:timePickerDialogTheme">@style/DarkSettingsDialog</item>
        <item name="android:datePickerDialogTheme">@style/DarkSettingsDialog</item>
        <item name="android:itemBackground">@color/dark_background</item>
    </style>

    <style name="AppTheme.Light.Default">
        <item name="themePrimary">@color/colorPrimary</item>
        <item name="themePrimaryDark">@color/colorPrimaryDark</item>
        <item name="themeAccent">@color/colorAccent</item>
        <item name="themeLightAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Light.Blue">
        <item name="themePrimary">@color/bluePrimary</item>
        <item name="themePrimaryDark">@color/bluePrimaryDark</item>
        <item name="themeAccent">@color/blueAccent</item>
        <item name="themeLightAccent">@color/blueLightAccent</item>
    </style>

    <style name="AppTheme.Light.Red">
        <item name="themePrimary">@color/redPrimary</item>
        <item name="themePrimaryDark">@color/redPrimaryDark</item>
        <item name="themeAccent">@color/redAccent</item>
        <item name="themeLightAccent">@color/redLightAccent</item>
    </style>

    <style name="AppTheme.Light.Green">
        <item name="themePrimary">@color/greenPrimary</item>
        <item name="themePrimaryDark">@color/greenPrimaryDark</item>
        <item name="themeAccent">@color/greenAccent</item>
        <item name="themeLightAccent">@color/greenLightAccent</item>
    </style>

    <style name="AppTheme.Dark.Green">
        <item name="themePrimary">@color/darkGreenPrimary</item>
        <item name="themePrimaryDark">@color/darkGreenPrimaryDark</item>
        <item name="themeAccent">@color/darkGreenAccent</item>
        <item name="themeLightAccent">@color/darkGreenLightAccent</item>
    </style>

    <style name="AppTheme.Dark.Purple">
        <item name="themePrimary">@color/darkPurplePrimary</item>
        <item name="themePrimaryDark">@color/darkPurplePrimaryDark</item>
        <item name="themeAccent">@color/darkPurpleAccent</item>
        <item name="themeLightAccent">@color/darkPurpleLightAccent</item>
    </style>

    <style name="AppTheme.Dark.Blue">
        <item name="themePrimary">@color/darkBluePrimary</item>
        <item name="themePrimaryDark">@color/darkBluePrimaryDark</item>
        <item name="themeAccent">@color/darkBlueAccent</item>
        <item name="themeLightAccent">@color/darkBlueLightAccent</item>
    </style>

    <style name="AppTheme.Dark.Red">
        <item name="themePrimary">@color/darkRedPrimary</item>
        <item name="themePrimaryDark">@color/darkRedPrimaryDark</item>
        <item name="themeAccent">@color/darkRedAccent</item>
        <item name="themeLightAccent">@color/darkRedLightAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="LightDialog" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="colorAccent">?themeAccent</item>
    </style>

    <style name="DarkDialog" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:background">?themeCardBackground</item>
        <item name="android:textColor">?themePrimaryFontColor</item>
        <item name="android:textColorPrimary">?themePrimaryFontColor</item>
        <item name="android:textColorSecondary">?themeSecondaryFontColor</item>
        <item name="android:textColorAlertDialogListItem">?themeSecondaryFontColor</item>
        <item name="android:colorLongPressedHighlight">?themeSecondaryFontColor</item>
        <item name="android:colorPressedHighlight">?themeSecondaryFontColor</item>
        <item name="android:state_pressed">?themeSecondaryFontColor</item>
        <item name="android:state_long_pressable">?themeSecondaryFontColor</item>
        <item name="android:colorControlActivated">?themeSecondaryFontColor</item>
        <item name="android:colorActivatedHighlight">?themeSecondaryFontColor</item>
        <item name="colorAccent">?themeAccent</item>
    </style>

    <style name="DarkSettingsDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">?themeCardBackground</item>
        <item name="colorAccent">?themeAccent</item>
    </style>
</resources>
